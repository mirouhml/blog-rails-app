<section class="new-post-section">
  <h1>Create a new post</h1>
  <%= form_with model: @post, url: user_posts_path, method: :post, class: 'post-form' do |form| %>
    <%= form.text_field :title, class: 'post-title', placeholder: 'Title' %>
    <%= form.text_area :text, class: 'post-text', placeholder: 'Text' %>
    <%= form.submit 'Post', class: 'post-button all-posts-link', data: {disable_with: "Loading..."} %>
  <% end %>
</section>
